{
  "manifest_version": 2,
  "name": "URL Shortener",
  "version": "1.0",
  "permissions": ["tabs", "activeTab", "clipboardWrite"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Click to Shorten URL"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
